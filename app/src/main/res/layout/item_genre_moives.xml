<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_genre_movies"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_item_genre_movies"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_s_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/cv_item_genre_movies"
        app:layout_constraintTop_toBottomOf="@id/cv_item_genre_movies" />

    <TextView
        android:id="@+id/tv_movie_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_date"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_movie_name"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_name" />


</androidx.constraintlayout.widget.ConstraintLayout>